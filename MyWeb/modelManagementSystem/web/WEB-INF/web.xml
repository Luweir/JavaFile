<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Servlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.lizhi.web.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ModelServlet</servlet-name>
        <servlet-class>com.lizhi.web.ModelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModelServlet</servlet-name>
        <url-pattern>/modelServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MethodServlet</servlet-name>
        <servlet-class>com.lizhi.web.MethodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MethodServlet</servlet-name>
        <url-pattern>/methodServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecordServlet</servlet-name>
        <servlet-class>com.lizhi.web.RecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecordServlet</servlet-name>
        <url-pattern>/recordServlet</url-pattern>
    </servlet-mapping>
    <!--谷歌验证码-->
    <servlet>
        <servlet-name>KaptchaServlet</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/kaptcha.jpg</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>TransactionFilter</filter-name>
        <filter-class>com.lizhi.filter.TransactionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TransactionFilter</filter-name>
        <!--对所有页面都这样，需要时提交 不需要时不管 为空-->
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ManageFilter</filter-name>
        <filter-class>com.lizhi.filter.ManagerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ManageFilter</filter-name>
        <url-pattern>/pages/business/*</url-pattern>
        <url-pattern>/pages/client/*</url-pattern>
        <url-pattern>/pages/common/*</url-pattern>
        <url-pattern>/pages/manage/*</url-pattern>
        <url-pattern>/pages/model/*</url-pattern>
        <url-pattern>/pages/record/*</url-pattern>
    </filter-mapping>
</web-app>